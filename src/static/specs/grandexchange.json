{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "",
    "font": "monospace",
    "fontSize": 18
  },
  "width": 400,
  "data": {
    "values": []
  },
  "repeat": {
    "layer": [
      "price",
      "avg"
    ]
  },
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {
        "bin": false,
        "field": "timestamp",
        "timeUnit": "utcmonthdate",
        "title": null,
        "type": "temporal",
        "axis": {
          "labelFontSize": 16,
          "labelFont": "monospace"
        }
      },
      "y": {
        "aggregate": "max",
        "field": {
          "repeat": "layer"
        },
        "type": "quantitative",
        "scale": {
          "zero": false
        },
        "title": null,
        "axis": {
          "format": "s",
          "grid": true,
          "labelFontSize": 16,
          "labelFont": "monospace"
        }
      },
      "color": {
        "datum": {
          "repeat": "layer"
        },
        "type": "nominal",
        "legend": {
          "labelFont": "monospace",
          "labelFontSize": 16,
          "symbolSize": 200,
          "symbolStrokeWidth": 12,
          "padding": -5
        },
        "scale": {
          "zero": false,
          "range": [
            "#7289da",
            "orange"
          ]
        }
      }
    }
  },
  "config": {
    "background": "#333",
    "title": {
      "color": "#fff"
    },
    "style": {
      "line": {
        "strokeWidth": 4
      },
      "guide-label": {
        "fill": "#fff"
      },
      "guide-title": {
        "fill": "#fff"
      }
    },
    "axis": {
      "domainColor": "#fff",
      "gridColor": "#888",
      "tickColor": "#fff"
    }
  }
}
